<%= form_for ([@post, @post.likes.build]) do |f| %>
     <%= f.hidden_field :user_id, value: current_user.id if !current_user.nil? %>
     <% if @post.likes.collect{|like| like.user_id}.include?(current_user.id) %>
          <span class="mr-2 mt-2">
               <%= link_to "👎", like_path(@like), class: "py-2 px-4 mr-2 bg-transparent outline-none text-4xl", method: :delete %>
          </span>
     <% else %>
          <%= f.submit "👍", class: "py-1 px-4 mt-2 mr-2 bg-transparent outline-none text-4xl" %>
     <% end %>
     <p class="text-center text-white"><%= pluralize(@post.likes_count, 'Like') %></p>
<% end %>
