<%= render "pages/shared/correct_nav" %>

<h1 class="text-3xl text-center pt-6 tracking-wide">Memes on Fire</h1>

<div class="mf-posts grid p-6">

     <% @mofs.each do |post| %>

          <div class="action-item-wrapper">

               <div class="post-action-items border border-2 rounded pt-2 text-center grid justify-center">

                    <div>
                         <%= render partial: "posts/shared/meme_post", locals: { post: post } %>
                    </div>

                    <div class="self-center text-sm">
                         <%= render partial: "posts/shared/edit_or_delete", locals: { post: post } %>
                    </div>

               </div>

               <%= render partial: "posts/shared/metadata", locals: { post: post } %>

          </div>

     <% end %>

</div>