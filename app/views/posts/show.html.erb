<h1>A Particular post</h1>

<%= image_tag(@post.image_url, size: "200x200", alt: "First meme post") %><br>
<div>
     <p><%= render "likes/button" %> <%= pluralize(@post.likes.count, 'like') if @post.likes.count != 0 %> </p>
     
</div>
<%= link_to "Meme Feed", posts_path %>
<%= link_to "Edit Post", edit_user_post_path(@post.user, @post) if current_user.posts.include?(@post) %>
<%= link_to "Delete Post", user_post_path(@post.user, @post), method: :delete, data: { confirm: "Are you sure?" } if current_user.posts.include?(@post) %>
<div>
     <p><%= render "comments/comments" %></p>
</div>
<div>
     <p><%= render "comments/form" %></p>
</div>
<div>
     <ul>
          <% @users_that_liked.each do |user| %>
               <li><%= user.email %></li>
          <% end %>
     </ul>
</div>




