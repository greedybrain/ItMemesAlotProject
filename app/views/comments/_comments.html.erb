<% @comments.each do |comment| %>
     <div class="comment-content border border-2 rounded-lg mb-2 px-2 py-1">
          <span class="text-red-600 text-sm mb-1 pb-1">
               <%= link_to comment.user.name, user_path(comment.user) %>
          </span> 
          <span class="text-gray-800 inline text-sm leading-none">
               <%= comment.content %> 
          </span>
          <p class="text-xs border-t pt-2">
               <%= shorten_time_format(comment) %>
               <%# <span> %>
                    <%# <%= link_to '• Edit', post_comment_path(comment.post, comment) if comment.user == current_user %>
               <%# </span> %>
               <span>
                    <%= link_to ' • Delete', post_comment_path(comment.post, comment), method: :delete, data: { confirm: "Are you sure?" } if comment.user == current_user %>
               </span>
          </p>
     </div>                                                                                    

<% end %>
