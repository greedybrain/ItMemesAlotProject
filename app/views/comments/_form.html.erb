<%= form_for [@post, @post.comments.build] do |f| %>
     <%= f.hidden_field :user_id, value: current_user.id if !current_user.nil? %>
     <%= f.text_area :content, class: "comment-box border rounded w-full px-2", resize: "none", placeholder: "Leave a hot comment" %><br>
     <%= f.submit "Post Comment", class: "border w-full mb-6 rounded-lg tracking-wider py-1 bg-red-500 text-white" %>
<% end %>